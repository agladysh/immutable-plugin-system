{
  "name": "immutable-plugin-system",
  "version": "0.3.0",
  "description": "A minimalist strongly typed immutable plugin system for Node.js",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "plugin",
    "plugin-system",
    "immutable",
    "typescript",
    "functional-programming",
    "type-safe",
    "extensible",
    "modular",
    "discovery",
    "collection",
    "readonly",
    "zero-dependencies"
  ],
  "author": "Alexander Gladysh <agladysh@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agladysh/immutable-plugin-system.git"
  },
  "bugs": {
    "url": "https://github.com/agladysh/immutable-plugin-system/issues"
  },
  "homepage": "https://github.com/agladysh/immutable-plugin-system#readme",
  "funding": {
    "url": "https://github.com/sponsors/agladysh"
  },
  "scripts": {
    "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:prettier && npm run lint:markdownlint",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check .",
    "lint:markdownlint": "markdownlint '**/*.md'",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:docs:site": "typedoc --options typedoc.site.json",
    "build:docs:md": "typedoc --options typedoc.md.json",
    "build:docs": "npm run build:docs:site && npm run build:docs:md",
    "build:examples": "tsc -p examples/events/tsconfig.json",
    "build": "npm run build:tsc && npm run build:examples && npm run build:docs",
    "clean:dist": "rm -rf dist examples/**/dist",
    "clean:ts": "rm -f tsconfig.*.tsbuildinfo",
    "clean:reports": "rm -rf .tap .nyc_output coverage",
    "clean:docs": "rm -rf docs/api site",
    "clean": "pnpm -s run clean:dist && pnpm -s run clean:ts && pnpm -s run clean:reports && pnpm -s run clean:docs",
    "clean:all": "rm -rf node_modules examples/**/node_modules && pnpm -s run clean",
    "test:tsd": "npm run build:tsc && tsd",
    "test:tap": "npm run build:examples && tap -R terse",
    "test:tap:direct": "tap -R terse",
    "test:tsd:direct": "tsd",
    "lint:direct": "eslint",
    "build:tsc:direct": "tsc -p tsconfig.build.json",
    "build:examples:direct": "tsc -p examples/events/tsconfig.json",
    "test:all": "pnpm -s run test:tsd && pnpm -s run test:tap",
    "test": "pnpm -s run lint && pnpm -s run test:all",
    "test:ci": "bash -lc 'set -euo pipefail; export CI=true; pnpm -s run clean:all && pnpm -s install && pnpm -s test'",
    "test:fix": "pnpm -s run fix && pnpm -s run test:all",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "lint:markdownlint": "markdownlint '**/*.md'",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write .",
    "fix:markdownlint": "markdownlint --fix '**/*.md'",
    "fix": "pnpm -s run fix:eslint && pnpm -s run fix:prettier && pnpm -s run fix:markdownlint",
    "lefthook:precommit": "lefthook run pre-commit",
    "link": "pnpm uninstall -g immutable-plugin-system || true && pnpm link --global \"$(pwd)\"",
    "prepublishOnly": "pnpm -s clean && pnpm -s build"
  },
  "tap": {
    "coverage-map": "./scripts/tap.coverage-map.mjs"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-tsdoc": "^0.3.0",
    "globals": "^16.3.0",
    "lefthook": "^1.12.3",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "tap": "^21.1.0",
    "tsc-files": "^1.1.4",
    "tsd": "^0.31.1",
    "typedoc": "^0.28.12",
    "typedoc-plugin-coverage": "^4.0.1",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
